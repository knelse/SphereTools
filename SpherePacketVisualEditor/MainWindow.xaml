<Window x:Class="SpherePacketVisualEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="1080" Width="1920">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <RichTextBox Name="PacketVisualizerRtb" SelectionChanged="PacketVisualizerRtb_OnSelectionChanged"
                     HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" IsReadOnly="True"
                     AutoWordSelection="False" SelectionBrush="Transparent" SelectionOpacity="0" Margin="4"
                     SelectionTextBrush="Black">
            <FlowDocument Name="PacketVisualizerText" FontFamily="Hack" FontSize="14" LineHeight="16"
                          LineStackingStrategy="BlockLineHeight" IsOptimalParagraphEnabled="False" />
        </RichTextBox>
        <Border Grid.Column="1" BorderThickness="0.5" BorderBrush="Black" Padding="4" Margin="4">
            <TextBlock Name="PacketSelectedValueDisplay" FontFamily="Hack" FontSize="13" TextWrapping="Wrap">Select bits to show value preview</TextBlock>
        </Border>
    </Grid>
</Window>